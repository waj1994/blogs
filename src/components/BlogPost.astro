---
import type { CollectionEntry } from "astro:content";
import dayjs from "dayjs";

import BaseHead from "./BaseHead.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import { SITE_TITLE_SUFFIX } from "../consts";

import "../styles/markdown.css";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate } = Astro.props;
---

<html lang="zh-cn">
  <head>
    <BaseHead
      title={`${title} - ${SITE_TITLE_SUFFIX}`}
      description={description}
    />
  </head>
  <body
    class="relative bg-white dark:bg-#111216 max-w-full sm:max-w-567px md:max-w-750px xl:max-w-960px mx-auto"
  >
    <Header className="px-20px" />
    <main class="mt-100px sm:px-20px max-w-700px mx-auto">
      <article>
        <div class="markdown-body">
          <h2 class="!mb-20px">{title}</h2>
          <div class="mb-50px text-#73737D opacity-90">
            {dayjs(pubDate).format("YYYY-MM-DD")}
          </div>
          <slot />
        </div>
      </article>
      <div id="giscus-container" class="giscus mt-100px px-20px sm:px-0"></div>
    </main>
    <Footer />
  </body>
</html>

<script is:inline>
  const theme = window?.getCacheTheme();
  const script = document.createElement("script");
  script.src = "https://giscus.app/client.js";
  script.setAttribute("data-repo", "wjie1994/blogs");
  script.setAttribute("data-repo-id", "R_kgDOMTwM0w");
  script.setAttribute("data-category", "Announcements");
  script.setAttribute("data-category-id", "DIC_kwDOMTwM084ChSnv");
  script.setAttribute("data-mapping", "title");
  script.setAttribute("data-strict", "0");
  script.setAttribute("data-reactions-enabled", "0");
  script.setAttribute("data-emit-metadata", "0");
  script.setAttribute("data-input-position", "top");
  script.setAttribute("data-theme", theme);
  script.setAttribute("data-lang", "zh-CN");
  script.setAttribute("data-loading", "lazy");
  script.setAttribute("crossorigin", "anonymous");
  script.async = true;
  document.getElementById("giscus-container")?.appendChild(script);
</script>
