---
import type { CollectionEntry } from "astro:content";
import dayjs from "dayjs";
import type { MarkdownHeading } from "astro";

import Catalog from "./Catalog.astro";
import BaseHead from "./BaseHead.astro";
import Header from "./Header.astro";
import BaseFooter from "./BaseFooter.astro";
import { SITE_TITLE_SUFFIX } from "../consts";

import "../styles/markdown.css";

type Props = CollectionEntry<"blog">["data"] & {
  headings: MarkdownHeading[];
};

const { title, description, pubDate, headings } = Astro.props;
---

<html lang="zh-cn">
  <head>
    <BaseHead
      title={`${title} - ${SITE_TITLE_SUFFIX}`}
      description={description}
    />
  </head>
  <body
    class="relative bg-white dark:bg-#1b1b1f max-w-full sm:max-w-567px md:max-w-750px xl:max-w-960px mx-auto"
  >
    <Header className="px-20px" />
    <main class="mt-100px sm:px-20px max-w-1057px mx-auto flex gap-x-64px">
      <article class="felx-1">
        <div class="markdown-body">
          <h2 class="!mb-20px">{title}</h2>
          <div class="mb-50px text-#73737D opacity-90">
            {dayjs(pubDate).format("YYYY-MM-DD")}
          </div>
          <slot />
        </div>
        <div
          id="giscus-container"
          class="giscus mt-100px px-20px sm:px-0 mb-100px"
        >
        </div>
      </article>
      <Catalog headings={headings} />
    </main>
    <BaseFooter />
  </body>
</html>
